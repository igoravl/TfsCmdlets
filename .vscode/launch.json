{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(PowerShell) Interactive Session",
            "createTemporaryIntegratedConsole": true,
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "(.NET) Windows PowerShell",
            "type": "clr",
            "request": "launch",
            "program": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\PowerShell.exe",
            "args": [
                "-noexit",
                "-command",
                "Import-Module ${workspaceFolder}/out/module/TfsCmdlets.psd1; Enter-TfsShell"
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "Build"
        },
        {
            "name": "(.NET) PowerShell 7 Preview",
            "type": "coreclr",
            "request": "launch",
            "program": "C:\\Program Files\\PowerShell\\7-preview\\pwsh.exe",
            "args": [
                "-noexit",
                "-command",
                "Import-Module ${workspaceFolder}/out/module/TfsCmdlets.psd1; Enter-TfsShell"
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "Build"
        },
        {
            "name": "(.NET) PowerShell 7",
            "type": "coreclr",
            "request": "launch",
            "program": "pwsh.exe",
            "args": [
                "-noexit",
                "-command",
                "Import-Module ${workspaceFolder}/out/module/TfsCmdlets.psd1; Enter-TfsShell"
            ],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal",
            "preLaunchTask": "Build"
        }
    ]
}